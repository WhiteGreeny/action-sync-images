FROM gcr.io/kaniko-project/executor:v1.24.0 as kaniko
FROM mplatform/manifest-tool:alpine-v2.0.8 as manifest-tool
FROM mikefarah/yq:4 AS yq

FROM bash:latest

RUN rm -rf /var/spool


COPY --from=kaniko /kaniko /kaniko
COPY --from=manifest-tool /manifest-tool /bin/manifest-tool
COPY --from=yq /usr/bin/yq /bin/yq

ENV PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/kaniko
ENV SSL_CERT_DIR=/kaniko/ssl/certs
ENV DOCKER_CONFIG=/kaniko/.docker/

CMD ["bash"]
